<h1>Listing studios</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Size</th>
  </tr>

<% @studios.each do |studio| %>
  <tr>
    <td><%=h studio.name %></td>
    <td><%=h studio.description %></td>
    <td><%=h studio.price %></td>
    <td><%=h studio.size %></td>
    <td><%= link_to 'Show', studio %></td>
    <td><%= link_to 'Edit', edit_studio_path(studio) %></td>
    <td><%= link_to 'Destroy', studio, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New studio', new_studio_path %>